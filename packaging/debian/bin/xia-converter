export PATH='/usr/local/bin:/usr/bin:/bin'
dir="/usr/lib/python2.7/dist-packages/converter/"

if ! cd "$dir"
then
    echo "Sorry, 'cd $dir' failed."
    echo "There is something wrong with the installation of the xia-converter package."
    exit 1
fi

exec python ./xia.py


